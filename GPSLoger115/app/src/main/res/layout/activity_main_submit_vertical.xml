<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main_submit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="loger.gps.ems.developers.shirazapp.gpsloger115.MainSubmit">

    <LinearLayout
        android:layout_marginTop="65dp"
        android:orientation="vertical"
        android:layout_weight=".55"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight=".5"
            android:layout_height="0dp" >

            <Button
                android:drawableBottom="@mipmap/ic_doctor"
                android:paddingBottom="15dp"
                android:layout_margin="5dp"
                android:background="#4db2ea"
                android:textColor="#f2f2f2"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="رسیدن بر بالین بیمار"
                android:layout_width="0dp"
                android:layout_weight=".33"
                android:layout_height="match_parent"
                android:id="@+id/button5" />

            <Button
                android:drawableBottom="@mipmap/ic_destination"
                android:paddingBottom="15dp"
                android:layout_margin="5dp"
                android:background="#a52e7e"
                android:textColor="#f2f2f2"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="رسیدن به محل فوریت"
                android:layout_width="0dp"
                android:layout_weight=".33"
                android:layout_height="match_parent"
                android:id="@+id/button4" />

            <Button
                android:drawableBottom="@mipmap/ic_start"
                android:paddingBottom="15dp"
                android:layout_margin="5dp"
                android:background="#dd4487"
                android:textColor="#f2f2f2"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="شروع ماموریت"
                android:layout_width="0dp"
                android:layout_weight=".33"
                android:layout_height="match_parent"
                android:id="@+id/button3" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_weight=".5"
            android:layout_height="0dp" >

            <Button
                android:paddingBottom="15dp"
                android:drawableBottom="@mipmap/ic_delivery"
                android:layout_margin="5dp"
                android:background="#dd3b87"
                android:textColor="#f2f2f2"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="تحویل بیمار"
                android:layout_width="0dp"
                android:layout_weight=".33"
                android:layout_height="match_parent"
                android:id="@+id/button8" />

            <Button
                android:drawableBottom="@mipmap/ic_hospital"
                android:paddingBottom="15dp"
                android:layout_margin="5dp"
                android:background="#c02a2b"
                android:textColor="#f2f2f2"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="رسیدن به مرکز"
                android:layout_width="0dp"
                android:layout_weight=".33"
                android:layout_height="match_parent"
                android:id="@+id/button7" />

            <Button
                android:paddingBottom="15dp"
                android:drawableBottom="@mipmap/ic_ambulance"
                android:layout_margin="5dp"
                android:background="#52b6e9"
                android:textColor="#f2f2f2"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="حرکت از محل فوریت"
                android:layout_width="0dp"
                android:layout_weight=".33"
                android:layout_height="match_parent"
                android:id="@+id/button6" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_weight=".5"
            android:layout_height="0dp" >

            <Button
                android:drawableBottom="@mipmap/ic_new"
                android:paddingBottom="15dp"
                android:layout_margin="5dp"
                android:background="#a42d7d"
                android:textColor="#f2f2f2"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="ماموریت"
                android:layout_width="0dp"
                android:layout_weight=".33"
                android:layout_height="match_parent"
                android:id="@+id/button11" />

            <Button
                android:drawableBottom="@mipmap/ic_delivery"
                android:paddingBottom="15dp"
                android:layout_margin="5dp"
                android:background="#ef940f"
                android:textColor="#f2f2f2"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="رسیدن به پایگاه"
                android:layout_width="0dp"
                android:layout_weight=".33"
                android:layout_height="match_parent"
                android:id="@+id/button10" />

            <Button
                android:drawableBottom="@mipmap/ic_delivery"
                android:paddingBottom="15dp"
                android:layout_margin="5dp"
                android:background="#70ba29"
                android:textColor="#f2f2f2"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="خاتمه ماموریت"
                android:layout_width="0dp"
                android:layout_weight=".33"
                android:layout_height="match_parent"
                android:id="@+id/button9" />
        </TableRow>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="65dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight=".45"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight=".15"
            android:layout_height="0dp" >

            <EditText
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColorHint="#f2f2f2"
                android:textColor="#f2f2f2"
                android:layout_margin="5dp"
                android:background="@drawable/button"
                android:hint="کیلومتر پایان"
                android:layout_gravity="center"
                android:gravity="center"
                android:inputType="phone"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="match_parent"
                android:id="@+id/endKM" />

            <EditText
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColorHint="#f2f2f2"
                android:textColor="#f2f2f2"
                android:layout_margin="5dp"
                android:background="@drawable/button"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="کیلومتر شروع"
                android:inputType="phone"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="match_parent"
                android:id="@+id/startKM" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight=".15"
            android:layout_height="0dp" >

            <Button
                android:background="@drawable/button"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textSize="20dp"
                android:drawableLeft="@mipmap/ic_send"
                android:paddingLeft="15dp"
                android:textColor="#f3f4f5"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="ارسال"
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:layout_height="match_parent"
                android:id="@+id/submit" />

            <ImageView
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/button"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:src="@mipmap/ic_menu"
                android:layout_height="match_parent"
                android:id="@+id/menu" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight=".7"
            android:layout_height="0dp" >


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <org.osmdroid.views.MapView
                    android:id="@+id/mapview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tilesource="Mapnik" />

                <TextView
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:text=""
                    android:padding="5dp"
                    android:background="#99000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/mission_idTV" />

                <LinearLayout
                    android:id="@+id/line"
                    android:layout_gravity="bottom|right"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </LinearLayout>


                <ImageView
                    android:layout_gravity="bottom"
                    android:gravity="top"
                    android:textColor="#ffffff"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/alert" />

            </FrameLayout>
        </TableRow>


    </LinearLayout>
</LinearLayout>